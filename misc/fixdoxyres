#!/usr/bin/perl -n

BEGIN { chomp($pwd = `pwd`) }
s,$pwd/?,,;
push @all, $_;

END {
	$all = join('', @all);
	@all = split(/^(?=\S)/m, $all);
	@prev = grep { ! m,^[a-z0-9_./]+:\d+:,s } @all;
	@all = map { $_ =~ s/([^:]+):(\d+):/sprintf('%s:%08d:', $1, $2)/e; $_ } grep { m,^[a-z0-9_./]+:\d+:,s } @all;
	$_ = join('', @prev, map { $_ =~ s/([^:]+):(\d+):/sprintf('%s:%d:', $1, $2)/e; $_ } sort @all);

	# output html
	print '<html><body><pre>';
	s,&,&amp;,; s,<,&lt;,g; s,>,&gt;,; s,",&quot;,g;
	print;
	print '</pre></body></html>';
}

